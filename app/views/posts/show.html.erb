<% @post.categories.each do |cat| %>
   <%= cat.name %>
<%end %>

<% @post.comments.each do |cat| %>
   <%= cat.content %>
<%end %>
<% @post.users.uniq.each do |user| %>
   <%= link_to user.username, user_path(user) %>

<%end %>


<%= form_for @comment do |f| %>
<%= f.label "Content" %>
<%= f.text_area :content %>
<%= f.collection_select :user_id, User.all, :id, :username  %>
<%= f.submit %>

<% end %>
